{
    "openapi": "3.0.0",
    "info": {
      "title": "Desafio Introdução ao SOLID Documentation",
      "description": "This is a API Desafio",
      "version": "1.0.0",
      "contact": {
        "email": "renanpl47@gmail.com"
      }
    },
    "paths": {
      "/users": {
        "post": {
          "tags": [
            "Users"
          ],
          "summary": "Criar usuário",
          "description": "Criar novo usuário",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                },
                "examples": {
                  "user": {
                    "value": {
                      "name": "name sample",
                      "email": "email@sample.com"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Created",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            },
            "400": {
              "description": "User already exists"
            }
          }
        },
        "get": {
          "tags": [
            "Users"
          ],
          "summary": "Lista todos usuários",
          "description": "Retorna um array com todos os usuários",
          "parameters": [
            {
              "name": "user_id",
              "in": "header",
              "required": true,
              "description": "ID do usuário"
            }
          ],
          "responses": {
            "200": {
              "description": "ok",
              "content": {
                "application/json": {
                  "type": "object"
                }
              }
            },
            "400": {
              "description": "bad request"
            }
          }
        }
      },
      "/users/{user_id}": {
        "get": {
          "tags": [
            "Users"
          ],
          "summary": "Get usuário",
          "description": "Get perfil do usuário",
          "parameters": [
            {
              "name": "user_id",
              "in": "path",
              "required": true,
              "description": "ID do usuário"
            }
          ],
          "responses": {
            "200": {
              "description": "ok",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            },
            "404": {
              "description": "not found "
            }
          }
        }
      },
      "/users/{user_id}/admin": {
        "patch": {
          "tags": [
            "Users"
          ],
          "summary": "Tornar usuário admin",
          "description": "Tornar usuário admin",
          "parameters": [
            {
              "name": "user_id",
              "in": "path",
              "required": true,
              "description": "ID do usuário"
            }
          ],
          "responses": {
            "200": {
              "description": "ok",
              "content": {
                "application/json": {
                  "type": "object",
                  "schema": {
                    "$ref": "#/components/schemas/User_admin"
                  }
                }
              }
            },
            "404": {
              "description": "not found"
            }
          }
        }
      }
    },
    "components": {
      "schemas": {
        "User": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "email": {
              "type": "string"
            },
            "admin": {
              "type": "boolean",
              "default": false
            },
            "created-at": {
              "type": "string"
            },
            "updated_at": {
              "type": "string"
            }
          }
        },
        "User_admin": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "email": {
              "type": "string"
            },
            "admin": {
              "type": "boolean",
              "default": true
            },
            "created-at": {
              "type": "string"
            },
            "updated_at": {
              "type": "string"
            }
          }
        }
      }
    }
  }